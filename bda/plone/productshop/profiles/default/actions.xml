<?xml version="1.0"?>
<object name="portal_actions"
        meta_type="Plone Actions Tool"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n">

  <object name="object_buttons" meta_type="CMF Action Category">

    <!-- color -->
    <object name="enable_color"
            meta_type="CMF Action"
            i18n:domain="bda.plone.productshop">
      <property name="title" i18n:translate="">
          Add color
      </property>
      <property name="description" i18n:translate="">
          Add color to product variant
      </property>
      <property name="url_expr">
          string:${object/absolute_url}/@@enable_color
      </property>
      <property name="icon_expr"></property>
      <property name="available_expr">
          object/@@can_enable_color
      </property>
      <property name="permissions">
          <element value="Modify portal content" />
      </property>
      <property name="visible">True</property>
    </object>

    <object name="disable_color"
            meta_type="CMF Action"
